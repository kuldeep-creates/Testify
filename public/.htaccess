Options -MultiViews
RewriteEngine On

# Handle static assets - serve them directly
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} ^/test/static/
RewriteRule . - [L]

# Handle favicon and manifest
RewriteCond %{REQUEST_URI} ^/test/(favicon\.ico|manifest\.json|logo.*\.png)$
RewriteRule . - [L]

# Handle React Router - redirect all other requests to index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^test/ /test/index.html [L]

# Fallback for root requests
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /test/index.html [L]
